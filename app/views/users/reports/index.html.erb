<div class="container">
  <div class="row">
    <h4 class="col-md-3 bg-light text-center">報告一覧</h4>
  </div>

  <div class="row">
    <div class="col-12 mx-auto">
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="text-center">作成者</th>
            <th>取引先</th>
            <th>訪問日時</th>
            <th>確認</th>
          </tr>
        </thead>
        <% @reports.each do |report| %>
        <tr class="border-bottom">
          <th class="align-middle"><%= report.user.last_name %> <%= report.user.first_name %></th>
          <th class="align-middle"><%= report.client.name %></th>
          <th class="align-middle">
            <%= link_to "#{report.start_visit.strftime("%Y/%m/%d %H:%M")} ~ #{report.finish_visit.strftime("%Y/%m/%d %H:%M")}", report_path(report) %>
          </th>
          <th class="confirmations_buttons_<%= report.id %>">
            <%= render 'users/confirmations/confirmation', report: report %>
          </th>
        </tr>
        <% end %>
      </table>
      
      <div class="row">
      <div class="col-lg-12 d-flex justify-content-center">
      <%= paginate @reports %>
      </div>
      </div>
      </div>
      
    </div>
  </div>
</div>
