  <%= form_with model: report, local:true do |f| %>
  
    <div class="form-group row mb-5">
      <%= f.label :visit, "訪問日時", class:"col-2 col-form-label" %>
      <%= f.label :start_visit, "訪問開始", class:"col-1 col-form-label" %>
      <%= f.datetime_field :start_visit, class:"form-control col-3", autofocus:true %>
      <%= f.label :finith_visit, "訪問終了", class:"offset-1 col-1 col-form-label" %>
      <%= f.datetime_field :finish_visit, class:"form-control col-3", autofocus:true %>
    </div>
    
    <div class="form-group row mb-5">
      <%= f.label :client_id, "取引先名", class:"col-2 col-form-label" %>
      <%= f.collection_select :client_id, Client.all, :id, :name, include_blank: "---選択してください---" %>
    </div>

    <div class="form-group row mb-5">
      <%= f.label :body, "報告内容", class:"col-2 col-form-label" %>
      <%= f.text_field :body, class:"form-control col-10", autofocus:true %>
    </div>
    
    <!--非表示のフォーム-->
    <%= f.hidden_field :user_id, value: current_user.id %>
    <!--非表示のフォーム-->
    
    <div class="row">
      <%= f.submit "保存", class:"offset-1 btn btn-success" %>
    </div>
  <% end %>