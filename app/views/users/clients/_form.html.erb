  <%= form_with model:client, local:true do |f| %>
    
 
    <div class="form-group row mb-5">
      <%= f.label :name, "取引先名", class:"col-2 col-form-label" %>
      <%= f.text_field :name, class:"form-control col-6", autofocus:true %>
    </div>
    
    <div class="form-group row mb-5">
      <%= f.label :name, "フリガナ", class:"col-2 col-form-label" %>
      <%= f.text_field :name_kana, class:"form-control col-6", autofocus:true %>
    </div>
    
    <div class="form-group row mb-5">
      <%= f.label :postal_code, "郵便番号", class:"col-2 col-form-label" %>
      <%= f.text_field :postal_code, class:"form-control col-4", autofocus:true %>
    </div>
    
    <div class="form-group row mb-5">
      <%= f.label :address, "住所", class:"col-2 col-form-label" %>
      <%= f.text_field :address, class:"form-control col-10", autofocus:true %>
    </div>
    
    <div class="form-group row mb-5">
      <%= f.label :telephone_number, "電話番号", class:"col-2 col-form-label" %>
      <%= f.text_field :telephone_number, class:"form-control col-4", autofocus:true %>
    </div>
    
    <div class="form-group row mb-5">
      <%= f.label :email, "メールアドレス", class:"col-2 col-form-label" %>
      <%= f.text_field :email, class:"form-control col-4", autofocus:true %>
    </div>
    
    <div class="row">
      <%= f.submit "保存", class:"offset-1 btn btn-success" %>
    </div>
  <% end %>
