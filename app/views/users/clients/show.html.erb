<div class="container">
  <div class="row mb-5">
    <h4 class="col-md-3 offset-1 bg-light text-center"><%= @client.name %>の詳細</h4>
  </div>

  <div class="row">
    <div class="col-7 ">
      <table class="table table-striped">
  
        <tr>
          <th class="text-center">取引先No.</th>
          <th><%= @client.id %></th>
        </tr>
        
        <tr>
          <th class="text-center">取引先名</th>
          <th><%= @client.name %></th>
        </tr>
        
        <tr>
          <th class="text-center">フリガナ</th>
          <th><%= @client.name_kana %></th>
        </tr>
        
        <tr>
          <th class="text-center">郵便番号</th>
          <th><%= @client.postal_code %></th>
        </tr>
        
        <tr>
          <th class="text-center">住所</th>
          <th><%= @client.address %></th>
        </tr>
        
        <tr>
          <th class="text-center">電話番号</th>
          <th><%= @client.telephone_number %></th>
        </tr>
        
        <tr>
          <th class="text-center">メールアドレス</th>
          <th><%= @client.email %></th>
        </tr>
      </table>
      <%= link_to "編集する", edit_client_path(@client), class:"offset-4 btn btn-success" %>
    </div>
    
     <div class="col-5">
       <h5>＜引き継ぎ事項＞</h5>
　　　　<!--コメント機能非同期-->
　　　　
        <div id="comment_form">
         <%= render 'users/comments/form', comment: @comment, client: @client %>
        </div>
        
        <div id="comment_index">
       　<%= render 'users/comments/index', client: @client %>
      　</div>
      　
        <!--コメント機能非同期-->
     </div>
       
  </div>
  



