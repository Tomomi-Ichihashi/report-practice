<div class="container">
  <div class="row mb-5">
    <h4 class="col-md-3 offset-1 bg-light text-center">部署一覧</h4>
  </div>

  <%= form_with model:[:admins, @department], local:true do |f| %>
    <div class="form-group row mb-5">
      <%= f.label :name, "部署名", class:"col-2 col-form-label" %>
      <%= f.text_field :name, placeholder:"部署名", class:"form-control col-4", autofocus:true %>
      <%= f.submit "新規登録", class:"offset-1 btn btn-success" %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-5">
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="text-center">部署名</th>
            <th></th>
          </tr>
        </thead>
        <% @departments.each do |department| %>
        <tr class="border-bottom">
          <th class="align-middle"><%= department.name %></th>
          <th class="text-right"><%= link_to "編集", edit_admins_department_path(department.id), class:"btn btn-success" %></th>
        </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>