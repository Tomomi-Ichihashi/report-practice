  <%= form_with model:[:admins, user], local:true do |f| %>
    
     <div class="form-group row mb-5">
      <%= f.label :image, "社員画像", class:"col-2 col-form-label" %>
      <%= f.attachment_field :image %>
     </div>

    <div class="form-group row mb-5">
      <%= f.label :name, "氏名", class:"col-2 col-form-label" %>
      <%= f.text_field :last_name, class:"form-control col-4", autofocus:true %>
      <%= f.text_field :first_name, class:"offset-1 form-control col-4" %>
    </div>
    
    <div class="form-group row mb-5">
      <%= f.label :name, "フリガナ", class:"col-2 col-form-label" %>
      <%= f.text_field :last_name_kana, class:"form-control col-4", autofocus:true %>
      <%= f.text_field :first_name_kana, class:"offset-1 form-control col-4" %>
    </div>

    <div class="form-group row mb-5">
      <%= f.label :department_id, "部署名", class:"col-2 col-form-label" %>
      <%= f.collection_select :department_id, Department.all, :id, :name, include_blank: "---選択してください---" %>
    </div>

    <div class="form-group row mb-5">
      <%= f.label :postal_code, "郵便番号", class:"col-2 col-form-label" %>
      <%= f.text_field :postal_code, class:"form-control col-4", autofocus:true %>
    </div>
    
    <div class="form-group row mb-5">
      <%= f.label :address, "住所", class:"col-2 col-form-label" %>
      <%= f.text_field :address, class:"form-control col-10", autofocus:true %>
    </div>
    
    <div class="form-group row mb-5">
      <%= f.label :telephone_number, "電話番号", class:"col-2 col-form-label" %>
      <%= f.text_field :telephone_number, class:"form-control col-4", autofocus:true %>
    </div>
    
    <div class="form-group row mb-5">
      <%= f.label :email, "メールアドレス", class:"col-2 col-form-label" %>
      <%= f.text_field :email, class:"form-control col-4", autofocus:true %>
    </div>
    
    <div class="form-group row mb-5">
      <%= f.label :password, "パスワード", class:"col-2 col-form-label" %>
      <%= f.text_field :password, class:"form-control col-4", autofocus:true %>
    </div>
    
    <div class="form-group row mb-5">
      <%= f.label :password_confirmation, "パスワード(確認)", class:"col-2 col-form-label" %>
      <%= f.text_field :password_confirmation, class:"form-control col-4", autofocus:true %>
    </div>
    
    <div class="form-group row mb-5">
      <%= f.label :is_deleted_label, "ステータス", class:"col-2 col-form-label" %>
      <div class="col-4 form-check form-check-inline">
        <%= f.radio_button :is_active, true, class:"form-check-input" %>
        <%= f.label :is_active, '有効', value: true, class:"form-check-label" %>
        <%= f.radio_button :is_active, false, class:"form-check-input ml-2" %>
        <%= f.label :is_active, '退職', value: false, class:"form-check-label" %>
      </div>
    </div>
    <div class="row">
      <%= f.submit "保存", class:"offset-1 btn btn-success" %>
    </div>
  <% end %>
